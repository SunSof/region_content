<div class="flex items-center justify-center min-h-screen bg-green-100">
  <div class="w-full max-w-md p-8 space-y-8 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-green-700">Регистрация</h2>
    <% if @user.errors.any? %>
      <div class="p-4 mb-4 text-orange-700 bg-orange-100 border-l-4 border-orange-500 rounded">
        <p class="font-bold">Ошибки регистрации:</p>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @user, url: new_user_path do |f| %>
      <div class="mb-4">
        <%= f.label :last_name, class: 'block text-sm font-medium text-green-700' %>
        <%= f.text_field :last_name, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :first_name, class: 'block text-sm font-medium text-green-700' %>
        <%= f.text_field :first_name, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :middle_name, class: 'block text-sm font-medium text-green-700' %>
        <%= f.text_field :middle_name, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :email, class: 'block text-sm font-medium text-green-700' %>
        <%= f.email_field :email, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :region, class: 'block text-sm font-medium text-green-700' %>
        <%= f.text_field :region, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: 'block text-sm font-medium text-green-700' %>
        <%= f.password_field :password, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, class: 'block text-sm font-medium text-green-700' %>
        <%= f.password_field :password_confirmation, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit 'Зарегестрироваться', class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
      </div>
    <% end %>
  </div>
</div>
