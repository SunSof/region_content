<header class="bg-green-700 shadow">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="text-green-700 font-bold text-xl">
      <%= link_to 'Региональный контент', root_path, class:'text-green-100 hover:text-orange-500' %>
    </div>
    <nav class="space-x-4">
      <%= link_to 'Главная', root_path, class: 'text-orange-100 hover:text-orange-500' %>
      <%= link_to 'О нас', '#', class: 'text-orange-100 hover:text-orange-500' %>
      <%= link_to 'Контакты', '#', class: 'text-orange-100 hover:text-orange-500' %>
    </nav>
    <% if current_user %>
      <div>
        <%= link_to 'Мой аккаунт', user_path(current_user.id), class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
        <%= link_to 'Посты моего региона', "#", class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
        <%= link_to 'Создать пост', "#", class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
      </div>
    <% else %>
      <div>
        <%= link_to 'Регистрация', new_user_path, class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
        <%= link_to 'Логин', login_path, class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
      </div>
    <%end%>
  </div>
</header>
