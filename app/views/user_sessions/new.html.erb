<div class="flex items-center justify-center min-h-screen bg-green-100">
  <div class="w-full max-w-md p-8 space-y-8 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-green-700">Зайти в аккаунт</h2>
    <% flash.each do |type, msg| %>
      <div class="text-amber-500 mb-2">
        <%= msg %>
      </div>
    <% end %>
    <%= form_with url: login_path, method: :post do |f|%>
      <div class="mb-4">
        <%= f.label :email, class: 'block text-sm font-medium text-green-700' %>
        <%= f.email_field :email, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: 'block text-sm font-medium text-green-700' %>
        <%= f.password_field :password, class: 'w-full px-3 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-600' %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit 'Логин', class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
      </div>
    <% end %>
  </div>
</div>
