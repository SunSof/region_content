<div class="flex items-center justify-center min-h-screen bg-green-100">
  <div class="w-full p-8 space-y-8 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-green-700"><%= @post.title %></h2>
    <div class="grid grid-cols-2 gap-4">
      <% @post.images.each do |image| %>
        <div>
          <%= image_tag url_for(image), class: 'rounded-lg mb-2' %>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= @post.content %>
    </div>
    <% if @post.files.attached? %>
      <div class="mb-4">
        <h4>Файлы:</h4>
        <% @post.files.each do |file| %>
          <div>
            <%= link_to file.filename, rails_blob_path(file), class: 'text-green-700 hover:text-green-900 underline mb-2' %>
          </div>
        <% end %>
      </div>
    <% end %>
    <% if @post.status == 'draft' %>
      <%= button_to 'Отправить на модерацию', submit_for_review_path(@post), method: :patch, class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600'%>
    <% end %>
  </div>
</div>
