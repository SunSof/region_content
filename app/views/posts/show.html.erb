<div class="flex items-center justify-center min-h-screen bg-green-100">
  <div class="w-full p-8 space-y-8 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-green-700"><%= @post.title %></h2>
    <div class="flex justify-center">
      <%= render 'posts/images', post: @post %>
    </div>
    <div class="mt-4 text-center">
      <%= @post.content %>
    </div>
    <div class="mt-4">
      <%= render 'posts/files', post: @post %>
    </div>
    <div class="flex justify-start mt-4 space-x-4">
      <% if @post.status == 'draft' %>
        <%= button_to 'Отправить на модерацию', submit_for_review_path(@post), method: :patch, class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
        <%= button_to 'Удалить пост', @post, method: :delete, form: { data: { turbo_confirm: 'Вы уверены, что хотите удалить черновик?' } }, class: 'px-4 py-2 font-bold text-white bg-orange-600 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-600' %>
      <% end %>
    </div>
  </div>
</div>